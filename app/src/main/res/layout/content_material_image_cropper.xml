<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.carlitosdroid.sample.activities.MaterialImageCropperActivity"
    tools:showIn="@layout/activity_material_image_cropper">

    <com.carlitosdroid.view.ImageCropperView
        android:id="@+id/micPicture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@color/md_blue_50"
        app:gridLineBorderColor="@color/md_blue_500"
        app:gridLineBorderStrokeWidth="4"
        app:gridLineColor="@color/md_green_200"
        app:gridLineStrokeWidth="3"
        app:imageAdjustType="center" />
</FrameLayout>
